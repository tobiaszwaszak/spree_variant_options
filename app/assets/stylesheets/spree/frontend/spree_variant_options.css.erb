#product-details .price.unselected {
  color: #bbb;
}
.variant-option-type {
  margin-bottom: 0;
}
#product-variants ul.variant-option-values {
  list-style-type: none;
  margin-bottom: 1em;
  z-index:1;
  padding-left: 0;
}


.variant-option-values li {

  z-index:1;
}
.variant-option-values li a {
  color: #000;
  display: block;
  background-color: #fff;
  border: 2px solid #000;
  padding: 2px 9px;
  margin: 3px 3px 0 0;
  text-decoration: none;
  cursor: pointer;
  border-radius: 0;

}
.variant-option-values li.clear {
  border: 0;
  float: none;
  clear: both;
}

div.variant-options a.clear-button {
  display: none;
  font-weight: bold;
  background-color: #fff;
  border-color: #FDE2E2;
  color: #c00e0e;
  vertical-align: middle;
  margin-left: 5px;
  line-height: normal;
  font-size: 12px;
}

.option-value.selected,
.option-value.in-stock:hover {
  background-color: #000;
  border-color: #000;
  color: #fff;
  border-radius: 0;

}
.option-value.out-of-stock {
  display: block;
  background: transparent url(<%= asset_path "frontend/out-of-stock.png" %>) 0 0 repeat;
  color: #aaa;
  cursor: default;

}
.option-value.locked,
.option-value.locked:hover {
  background-color: #fff;
  border-color: #f0f0f0;
  color: #ddd;
  cursor: default;
  border-radius: 0;
}
.option-value.locked img {
  filter:alpha(opacity=50);
  -moz-opacity:0.5;
  -khtml-opacity: 0.5;
  opacity: 0.5;
}


h6.variant-option-type strong.selection.out-of-stock {
  background: none;
  text-decoration: line-through;
  cursor: default;
  font-weight: bold;
}

.variant-option-type label {
  display: inline-block;
}

.btn-success[disabled] {
  border-color: #f0f0f0;
  color: #ddd;
  background-color: #fff;
}
